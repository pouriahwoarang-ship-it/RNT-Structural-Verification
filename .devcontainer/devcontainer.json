  "image": "m4thg33k/lean4-devcontainer:latest", 
  
  // تنظیمات مخصوص VS Code (افزونه‌های ضروری برای کار با Lean)
  "customizations": {
    "vscode": {
      "extensions": [
        "leanprover.lean4", // افزونه رسمی Lean 4 
        "ms-python.python"  // برای هر گونه استفاده جانبی از پایتون
      ]
    }
  },
  "remoteUser": "vscode"
}
